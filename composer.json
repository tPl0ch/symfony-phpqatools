{
    "name": "tp/phpqatools-edition",
    "description": "The \"Symfony PHP-QA-Tools Edition\" distribution",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "2.1.x-dev",
        "doctrine/orm": ">=2.2.3,<2.4-dev",
        "doctrine/doctrine-bundle": "1.0.*",
        "twig/extensions": "1.0.*@dev",
        "symfony/assetic-bundle": "2.1.*",
        "symfony/swiftmailer-bundle": "2.1.*",
        "symfony/monolog-bundle": "2.1.*",
        "sensio/distribution-bundle": "2.1.*",
        "sensio/framework-extra-bundle": "2.1.*",
        "sensio/generator-bundle": "2.1.*",
        "jms/security-extra-bundle": "1.2.*",
        "jms/di-extra-bundle": "1.1.*",
        "kriswallsmith/assetic": "1.1.*@dev",
        "phpunit/phpunit": "3.7.*",
        "phpunit/phpunit-selenium": "1.2.*",
        "pdepend/pdepend": "1.1.*",
        "pear-pear.phpunit.de/phpcpd": "*",
        "phpmd/phpmd": "*",
        "phpunit/php-invoker": "1.1.*",
        "squizlabs/php_codesniffer": "1.4.*",
        "phpdocumentor/phpdocumentor": "dev-develop",
        "pear-phpqatools/PHP_CodeBrowser": "*",
        "phploc/phploc": "dev-master",
        "mikey179/vfsStream": "1.1.*",
        "behat/behat":  "2.4.*@stable",
        "behat/mink":   "1.4.*@stable",
        "behat/symfony2-extension": "dev-develop",
        "behat/mink-extension": "*",
        "behat/mink-browserkit-driver": "*",
        "behat/mink-selenium2-driver": "*",
        "liip/functional-test-bundle": "dev-master"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/tPl0ch/Symfony2Extension.git"
        },
        {
            "type": "pear",
            "url": "pear.phpunit.de"
        },
        {
            "type":"composer",
            "url":"http://packages.zendframework.com"
        },
        {
            "type": "pear",
            "url": "pear.phpqatools.org"
        },
        {
            "type": "pear",
            "url": "pear.php.net"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web"
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "dev"
}
